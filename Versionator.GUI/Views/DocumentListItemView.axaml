<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Versionator.GUI.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Versionator.GUI.Views.DocumentListItemView">

    <Design.DataContext>
        <viewModels:DocumentListItemViewModel />
    </Design.DataContext>

    <Grid ColumnDefinitions="*,50">

        <StackPanel Grid.Column="0">
            <TextBlock 
                FontSize="14"
                Text="{Binding Controller.Accessor.FileName}" />
            <TextBlock 
                FontSize="10" 
                Foreground="Gray" 
                Text="{Binding Controller.FilePath}" />
        </StackPanel>
        <TextBlock
            Grid.Column="1"
            FontSize="14" 
            Foreground="Gray" 
            Width="50"
            HorizontalAlignment="Right"
            VerticalAlignment="Center"
            Text="{Binding CurrentVersion}"/>
        
    </Grid>
</UserControl>